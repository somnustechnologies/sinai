<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Sistema Integral de Administraci√≥n Iztacalco</display-name>
  <servlet>
    <servlet-name>SinaiWeb</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
                /WEB-INF/ctx/dao-context.xml
                /WEB-INF/ctx/service-context.xml
                /WEB-INF/ctx/web-context.xml
            </param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>SinaiWeb</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
    <security-constraint>
    <web-resource-collection>
      <web-resource-name>any</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
  
  <welcome-file-list>
    <welcome-file>jsp/layout/container/main.jsp</welcome-file>
  </welcome-file-list>
</web-app>